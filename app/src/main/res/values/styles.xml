<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="android:datePickerDialogTheme" tools:targetApi="lollipop">@style/MyDatePickerDialogYellowTheme</item>
        <item name="android:timePickerDialogTheme" tools:targetApi="lollipop">@style/MyTimePickerDialogYellowTheme</item>


        <!--<item name="android:datePickerDialogTheme">@style/MyDatePickerDialogBlueTheme</item>-->
        <!--<item name="android:timePickerDialogTheme">@style/MyTimePickerDialogBlueTheme</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textView_date_byDayView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--yellow date/time picker dialog-->
    <style name="MyDatePickerDialogYellowTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:datePickerStyle">@style/MyDatePickerYellowStyle</item>
    </style>
    <style name="MyDatePickerYellowStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/colorMyYellow</item>
    </style>

    <style name="MyTimePickerDialogYellowTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:timePickerStyle">@style/MyTimePickerYellowStyle</item>
    </style>
    <style name="MyTimePickerYellowStyle" parent="@android:style/Widget.Material.Light.TimePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/colorMyYellow</item>
    </style>

    <!--blue date/time picker dialog-->
    <style name="MyDatePickerDialogBlueTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:datePickerStyle">@style/MyDatePickerBlueStyle</item>
    </style>
    <style name="MyDatePickerBlueStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/colorMyBlue</item>
    </style>

    <style name="MyTimePickerDialogBlueTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:timePickerStyle">@style/MyTimePickerBlueStyle</item>
    </style>
    <style name="MyTimePickerBlueStyle" parent="@android:style/Widget.Material.Light.TimePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@color/colorMyBlue</item>
    </style>

    <!--添加页面radiobutton的样式-->
    <style name="RadioButtonStyles_ora">
        <item name="android:button">@drawable/ic_radiobtn_ora_selector</item>
    </style>
    <style name="RadioButtonStyles_purple">
        <item name="android:button">@drawable/ic_radiobtn_purple_selector</item>
    </style>
    <style name="RadioButtonStyles_blue">
        <item name="android:button">@drawable/ic_radiobtn_blue_selector</item>
    </style>
    <style name="RadioButtonStyles_yellow">
        <item name="android:button">@drawable/ic_radiobtn_yellow_selector</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/out_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/out_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/in_from_left</item>
    </style>
    <style name="AppTheme.AnimActivityTheme">
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.note">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>