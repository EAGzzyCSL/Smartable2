<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMyWhite"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_color_indicator"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorMyRed"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_num_smart_serialize"
            android:text="hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorMyBlack"
            android:singleLine="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_tv_alert"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_alarm_black_24dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/third_text"
                android:visibility="gone"
                android:text="1/12 14:00"/>
            <TextView
                android:id="@+id/item_tv_start"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_starttime"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="gone"
                android:textColor="@color/third_text"
                android:text="1/13 15:00"/>
            <TextView
                android:id="@+id/item_tv_end"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_endtime"
                android:textSize="14sp"
                android:textStyle="italic"
                android:visibility="invisible"
                android:textColor="@color/third_text"
                android:text="1/23 13:00"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
