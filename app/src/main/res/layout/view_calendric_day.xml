<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/view_calendric_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <view.CalendricSimpleDayView
            android:id="@+id/view_calendricSimpleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </ScrollView>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_calendric_day_textView_showMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="6æœˆ" />

        <TextView
            android:id="@+id/view_calendric_day_textView_showDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="1" />
    </LinearLayout>


</FrameLayout>
